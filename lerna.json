{
  "packages": [
    "packages/*",
    "example"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "preId": "alpha",
      "preDistTag": "next",
      "message": "chore: publish",
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "**/example/**"
      ]
    }
  }
}
